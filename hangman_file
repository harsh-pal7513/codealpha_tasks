import random

def hangman():
    word_list = ["python", "hangman", "challenge", "programming", "keyboard"]
    word = random.choice(word_list)
    guessed_letters = []
    attempts = 6

    print("ğŸ® Welcome to Hangman!")
    print("_ " * len(word))

    while attempts > 0:
        guess = input("ğŸ‘‰ Guess a letter: ").lower()

        if not guess.isalpha() or len(guess) != 1:
            print("â— Please enter a single alphabetical character.")
            continue

        if guess in guessed_letters:
            print("ğŸ” You've already guessed that letter.")
            continue

        guessed_letters.append(guess)

        if guess in word:
            print("âœ… Good guess!")
        else:
            attempts -= 1
            print(f"âŒ Wrong guess! Attempts left: {attempts}")

        # Show current word progress
        display_word = [letter if letter in guessed_letters else "_" for letter in word]
        print("ğŸ“ Word: " + " ".join(display_word))

        if "_" not in display_word:
            print("ğŸ‰ Congratulations! You guessed the word:", word)
            break
    else:
        print("ğŸ’€ Game Over! The word was:", word)

# Run the game
hangman()
